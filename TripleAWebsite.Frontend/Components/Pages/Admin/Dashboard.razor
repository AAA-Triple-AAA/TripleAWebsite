@page "/admin/dashboard"
@rendermode InteractiveServer

<PageTitle>Admin Dashboard</PageTitle>

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1 class="fw-bold">Admin Dashboard</h1>

        <div class="d-flex gap-2">
            <a href="/" class="btn btn-outline-primary btn-sm d-flex align-items-center">
                <i class="bi bi-house-door-fill me-1"></i> Go to Site
            </a>

            <form action="Account/Logout" method="post">
                <AntiforgeryToken />
                <input type="hidden" name="ReturnUrl" value="" />
                <button type="submit" class="btn btn-outline-danger btn-sm h-100">
                    <i class="bi bi-box-arrow-right"></i> Logout
                </button>
            </form>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-6 col-lg-3">
            <a href="/admin/profile" class="text-decoration-none">
                <div class="card h-100 shadow-sm hover-shadow text-center p-4">
                    <i class="bi bi-person-circle display-4 text-primary mb-3"></i>
                    <h4 class="text-dark">Edit Profile</h4>
                    <p class="text-muted small">Update bio, photo, and resume.</p>
                </div>
            </a>
        </div>

        <div class="col-md-6 col-lg-3">
            <a href="/admin/projects" class="text-decoration-none">
                <div class="card h-100 shadow-sm hover-shadow text-center p-4">
                    <i class="bi bi-code-square display-4 text-success mb-3"></i>
                    <h4 class="text-dark">Projects</h4>
                    <p class="text-muted small">Add or manage portfolio projects.</p>
                </div>
            </a>
        </div>

        <div class="col-md-6 col-lg-3">
            <a href="/admin/skills" class="text-decoration-none">
                <div class="card h-100 shadow-sm hover-shadow text-center p-4">
                    <i class="bi bi-tools display-4 text-warning mb-3"></i>
                    <h4 class="text-dark">Skills</h4>
                    <p class="text-muted small">Manage technical skills & icons.</p>
                </div>
            </a>
        </div>

        <div class="col-md-6 col-lg-3">
            <a href="/admin/socials" class="text-decoration-none">
                <div class="card h-100 shadow-sm hover-shadow text-center p-4">
                    <i class="bi bi-share display-4 text-info mb-3"></i>
                    <h4 class="text-dark">Social Links</h4>
                    <p class="text-muted small">Update social media links.</p>
                </div>
            </a>
        </div>
    </div>
</div>

<style>
    .hover-shadow:hover {
        transform: translateY(-5px);
        transition: transform 0.2s;
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
    }
</style>
