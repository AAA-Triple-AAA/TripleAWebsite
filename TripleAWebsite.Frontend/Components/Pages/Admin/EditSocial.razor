@page "/admin/social/edit/{Id:int?}"
@using Microsoft.EntityFrameworkCore
@using TripleAWebsite.Frontend.Data
@inject ApplicationDbContext DbContext
@inject NavigationManager Nav
@rendermode InteractiveServer

<div class="container py-5" style="max-width: 600px;">
    <div class="d-flex align-items-center mb-4">
        <a href="/admin/socials" class="btn btn-outline-secondary me-3">&larr; Back</a>
        <h2 class="fw-bold m-0">@(Id == null ? "New Link" : "Edit Link")</h2>
    </div>

    @if (Model == null)
    {
        <div class="spinner-border text-primary"></div>
    }
    else
    {
        <EditForm Model="Model" OnValidSubmit="SaveSocial" FormName="SocialForm">
            <DataAnnotationsValidator />

            <div class="card shadow-sm p-4">

                <div class="mb-3">
                    <label class="form-label">Platform Name</label>
                    <InputText @bind-Value="Model.Name" class="form-control" placeholder="e.g. LinkedIn" />
                    <ValidationMessage For="() => Model.Name" class="text-danger small" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Profile URL</label>
                    <InputText @bind-Value="Model.Url" class="form-control" placeholder="https://linkedin.com/in/..." />
                    <ValidationMessage For="() => Model.Url" class="text-danger small" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Bootstrap Icon Class</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light">
                            <i class="@(string.IsNullOrEmpty(Model.IconClass) ? "bi bi-question" : Model.IconClass) fs-5"></i>
                        </span>
                        <InputText @bind-Value="Model.IconClass" class="form-control" placeholder="bi bi-github" />
                    </div>
                    <ValidationMessage For="() => Model.IconClass" class="text-danger small" />

                    <div class="form-text mt-2">
                        <i class="bi bi-info-circle"></i> Need an icon?
                        <a href="https://icons.getbootstrap.com/" target="_blank" class="text-decoration-none fw-bold">
                            Search Bootstrap Icons Library
                        </a>
                    </div>
                </div>

                <div class="mb-4">
                    <label class="form-label">Display Order</label>
                    <InputNumber @bind-Value="Model.DisplayOrder" class="form-control" />
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">
                        @(Id == null ? "Create Link" : "Save Changes")
                    </button>
                </div>
            </div>
        </EditForm>
    }
</div>

@code {
    [Parameter] public int? Id { get; set; }
    private SocialLink? Model { get; set; }

    protected override async Task OnInitializedAsync()
    {
        if (Id != null)
        {
            Model = await DbContext.SocialLinks.FindAsync(Id);
        }
        else
        {
            // Auto-increment order
            var maxOrder = await DbContext.SocialLinks.Select(s => (int?)s.DisplayOrder).MaxAsync() ?? 0;
            Model = new SocialLink { DisplayOrder = maxOrder + 1 };
        }
    }

    private async Task SaveSocial()
    {
        if (Model!.Id == 0) DbContext.SocialLinks.Add(Model);
        else DbContext.SocialLinks.Update(Model);

        await DbContext.SaveChangesAsync();
        Nav.NavigateTo("/admin/socials");
    }
}
