@page "/admin/skill/edit/{Id:int?}"
@using Microsoft.EntityFrameworkCore
@using TripleAWebsite.Frontend.Data
@using TripleAWebsite.Frontend.Services
@inject ApplicationDbContext DbContext
@inject FileService FileService
@inject NavigationManager Nav
@rendermode InteractiveServer

<div class="container py-5" style="max-width: 600px;">
    <div class="d-flex align-items-center mb-4">
        <a href="/admin/skills" class="btn btn-outline-secondary me-3">&larr; Back</a>
        <h2 class="fw-bold m-0">@(Id == null ? "New Skill" : "Edit Skill")</h2>
    </div>

    @if (Model == null)
    {
        <div class="spinner-border text-primary"></div>
    }
    else
    {
        <EditForm Model="Model" OnValidSubmit="SaveSkill" FormName="SkillForm">
            <DataAnnotationsValidator />

            <div class="card shadow-sm p-4">

                <div class="mb-3">
                    <label class="form-label">Skill Name</label>
                    <InputText @bind-Value="Model.Name" class="form-control" placeholder="e.g. C#" />
                    <ValidationMessage For="() => Model.Name" class="text-danger small" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Display Order</label>
                    <InputNumber @bind-Value="Model.DisplayOrder" class="form-control" />
                    <div class="form-text small">Items 1-6 usually show as circles; others show in the popup.</div>
                </div>

                <div class="mb-4">
                    <label class="form-label">Icon (Optional)</label>

                    @if (!string.IsNullOrEmpty(Model.IconUrl))
                    {
                        <div class="mb-2 p-3 border rounded bg-light text-center">
                            <img src="@Model.IconUrl" height="50" />
                            <div class="mt-1 small text-muted">Current Icon</div>
                        </div>
                    }

                    <InputFile OnChange="UploadIcon" class="form-control" accept=".svg,.png,.jpg,.jpeg,.webp" />
                    <div class="form-text">
                        SVG files are best for crisp icons. <br />
                        <a href="https://devicon.dev/" target="_blank" class="text-decoration-none">
                            <i class="bi bi-box-arrow-up-right"></i> Find icons at Devicon
                        </a>
                    </div>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">
                        @(Id == null ? "Add Skill" : "Save Changes")
                    </button>
                </div>
            </div>
        </EditForm>
    }
</div>

@code {
    [Parameter] public int? Id { get; set; }
    private Skill? Model { get; set; }

    protected override async Task OnInitializedAsync()
    {
        if (Id != null)
        {
            Model = await DbContext.Skills.FindAsync(Id);
        }
        else
        {
            // Default logic: find the highest current order and add 1
            var maxOrder = await DbContext.Skills.Select(s => (int?)s.DisplayOrder).MaxAsync() ?? 0;
            Model = new Skill { DisplayOrder = maxOrder + 1 };
        }
    }

    private async Task UploadIcon(InputFileChangeEventArgs e)
    {
        // 1. Cleanup old file
        if (!string.IsNullOrEmpty(Model!.IconUrl))
        {
            FileService.DeleteFile(Model.IconUrl);
        }

        // 2. Generate friendly name: "csharp-icon.svg"
        var friendlyName = string.IsNullOrWhiteSpace(Model.Name)
            ? "skill-icon"
            : $"{Model.Name.Trim().ToLower().Replace(" ", "-").Replace("#", "sharp")}-icon";

        // 3. Save
        Model.IconUrl = await FileService.SaveFileAsync(e.File, friendlyName);
    }

    private async Task SaveSkill()
    {
        if (Model!.Id == 0) DbContext.Skills.Add(Model);
        else DbContext.Skills.Update(Model);

        await DbContext.SaveChangesAsync();
        Nav.NavigateTo("/admin/skills");
    }
}
